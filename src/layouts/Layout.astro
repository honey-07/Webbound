---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollToTop from "../components/ScrollToTop.astro";

import SEO from "../components/SEO.astro";
import "../styles/App.css";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  canonicalUrl?: string;
  ogImage?: string;
  type?: "website" | "article";
}

const {
  title = "Webbound.dev - TRANSFORMING IDEAS INTO DIGITAL REALITY",
  description = "We're a cutting-edge technology solutions company specializing in web development, mobile apps, AI integration, and custom IT solutions. Let's build the future together.",
  keywords = [
    "web development",
    "mobile apps",
    "AI solutions",
    "custom IT",
    "digital transformation",
    "webbound",
  ],
  canonicalUrl = "/",
  ogImage = "/og-image.png",
  type = "website",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <ScrollToTop />
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      type={type}
    />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-white">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
