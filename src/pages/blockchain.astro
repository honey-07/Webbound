---
// src/pages/blockchain.astro
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";

import { Bitcoin, Code2, Shield, Workflow } from "lucide-react";

const features = [
  {
    icon: Bitcoin,
    title: "Smart Contract Development",
    description:
      "Custom smart contracts for DeFi, NFTs, DAOs, and other blockchain applications using Solidity and other blockchain programming languages.",
  },
  {
    icon: Code2,
    title: "DApp Development",
    description:
      "Full-stack decentralized application development with modern frameworks and Web3 integration.",
  },
  {
    icon: Shield,
    title: "Blockchain Security",
    description:
      "Smart contract auditing, security testing, and implementation of best practices to protect your blockchain applications.",
  },
  {
    icon: Workflow,
    title: "Token Development",
    description:
      "Custom token creation, ICO/IDO platforms, and tokenomics implementation for various blockchain networks.",
  },
];

const technologies = [
  "Ethereum",
  "Solana",
  "Polygon",
  "Binance Smart Chain",
  "Web3.js",
  "Ethers.js",
  "Hardhat",
  "Truffle",
  "IPFS",
  "OpenZeppelin",
  "Chainlink",
  "The Graph",
];
---

<SEO
  title="Blockchain Development Services - Webbound.dev"
  description="Expert blockchain development services including smart contracts, DApps, token development, and blockchain security. Build secure, scalable blockchain solutions."
  keywords={[
    "blockchain development",
    "smart contracts",
    "DApp development",
    "cryptocurrency",
    "Web3",
    "blockchain security",
  ]}
  canonicalUrl="/blockchain"
/>

<Layout>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pt-20">
    <div class="py-24">
      <!-- Hero Section -->
      <div class="container mx-auto px-4 mb-16">
        <h1
          class="text-4xl md:text-5xl font-bold text-center mb-6 text-gray-900 dark:text-white"
        >
          BLOCKCHAIN <span class="gradient-text">DEVELOPMENT</span> SERVICES
        </h1>
        <p
          class="text-xl text-center max-w-3xl mx-auto text-gray-600 dark:text-gray-300"
        >
          Build secure, scalable, and innovative blockchain solutions with our
          expert development team. From smart contracts to full-scale DApps, we
          bring your blockchain vision to life.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="container mx-auto px-4 mb-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            features.map((feature) => {
              const IconComponent = feature.icon;
              return (
                <div class="brutalist-container p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
                  <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center mb-4 text-blue-600 dark:text-blue-400">
                    <IconComponent className="w-6 h-6" />
                  </div>
                  <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">
                    {feature.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300">
                    {feature.description}
                  </p>
                </div>
              );
            })
          }
        </div>
      </div>

      <!-- Technologies Section -->
      <div class="bg-gray-100 dark:bg-gray-800/50 py-16">
        <div class="container mx-auto px-4">
          <h2
            class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white"
          >
            TECHNOLOGIES WE <span class="gradient-text">USE</span>
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {
              technologies.map((tech) => (
                <div class="brutalist-container bg-white dark:bg-gray-800 p-4 rounded-lg text-center shadow-sm hover:shadow-md transition-shadow">
                  <span class="text-gray-800 dark:text-gray-200 font-medium">
                    {tech}
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Process Section -->
      <div class="container mx-auto px-4 py-16">
        <div class="text-center mb-12">
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
          >
            OUR BLOCKCHAIN <span class="gradient-text">PROCESS</span>
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            We follow a comprehensive approach to blockchain development
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div
              class="w-16 h-16 bg-blue-500 text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-xl"
            >
              1
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
            >
              Research & Planning
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              We analyze your requirements and design the optimal blockchain
              architecture
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-purple-500 text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-xl"
            >
              2
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
            >
              Smart Contract Development
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              We develop and test secure smart contracts tailored to your needs
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-green-500 text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-xl"
            >
              3
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
            >
              Frontend Integration
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              We build user-friendly interfaces that interact seamlessly with
              blockchain
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-orange-500 text-white rounded-full flex items-center justify-center mx-auto mb-4 font-bold text-xl"
            >
              4
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
            >
              Testing & Deployment
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Rigorous testing and secure deployment to your chosen blockchain
              network
            </p>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="container mx-auto px-4 py-16 text-center">
        <div
          class="brutalist-container inline-block p-8 bg-white dark:bg-gray-800"
        >
          <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">
            READY TO START YOUR <span class="gradient-text">BLOCKCHAIN</span> PROJECT?
          </h2>
          <p
            class="text-xl mb-8 text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
          >
            Let's discuss how we can help you leverage blockchain technology for
            your business and create innovative decentralized solutions.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="brutalist-button inline-block text-lg px-8 py-4"
            >
              GET STARTED
            </a>
            <a
              href="https://calendly.com/webbound/30min"
              target="_blank"
              class="brutalist-button bg-purple-500 inline-block text-lg px-8 py-4"
            >
              SCHEDULE CONSULTATION
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
