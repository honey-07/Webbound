---
// src/pages/contact.astro
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";
import CustomDropdown from "../components/CustomDropdown.astro";
---

<SEO
  title="Contact Us - Webbound.dev"
  description="Get in touch with Webbound.dev for your technology needs. We're here to help transform your business with our expert solutions and services."
  keywords={[
    "contact us",
    "get in touch",
    "tech support",
    "IT services contact",
    "technology consultation",
  ]}
  canonicalUrl="/contact"
/>

<Layout>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pt-16 md:pt-20">
    <div class="container mx-auto px-4 md:px-6 lg:px-8 py-8 md:py-12">
      <!-- Hero Section -->
      <div class="text-center mb-12 md:mb-16">
        <h1
          class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 dark:text-white mb-4 md:mb-6"
        >
          GET IN <span class="gradient-text">TOUCH</span>
        </h1>
        <p
          class="text-lg md:text-xl lg:text-2xl text-gray-600 dark:text-gray-400 max-w-4xl mx-auto leading-relaxed px-4"
        >
          Ready to transform your ideas into digital reality? Let's start the
          conversation and build something amazing together.
        </p>
      </div>

      <!-- Contact Methods -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 mb-12 md:mb-16"
      >
        <div
          class="card-3d p-4 md:p-6 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 text-white"
        >
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-white/20 rounded-lg flex items-center justify-center mb-3 md:mb-4"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold mb-2">Email</h3>
          <p class="text-white/90 font-medium mb-1 text-sm md:text-base">
            hello@webbound.dev
          </p>
          <p class="text-white/70 text-xs md:text-sm">
            Send us an email anytime
          </p>
        </div>

        <div
          class="card-3d p-4 md:p-6 rounded-lg bg-gradient-to-br from-green-500 to-teal-500 text-white"
        >
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-white/20 rounded-lg flex items-center justify-center mb-3 md:mb-4"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold mb-2">Phone</h3>
          <p class="text-white/90 font-medium mb-1 text-sm md:text-base">
            +1 (208) 408 1463
          </p>
          <p class="text-white/70 text-xs md:text-sm">
            Call us during business hours
          </p>
        </div>

        <div
          class="card-3d p-4 md:p-6 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 text-white"
        >
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-white/20 rounded-lg flex items-center justify-center mb-3 md:mb-4"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold mb-2">Address</h3>
          <p class="text-white/90 font-medium mb-1 text-sm md:text-base">
            9169 W State St #2156
          </p>
          <p class="text-white/70 text-xs md:text-sm">Garden City, ID 83714</p>
        </div>

        <div
          class="card-3d p-4 md:p-6 rounded-lg bg-gradient-to-br from-orange-500 to-red-500 text-white"
        >
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-white/20 rounded-lg flex items-center justify-center mb-3 md:mb-4"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"
              ></path>
            </svg>
          </div>
          <h3 class="text-base md:text-lg font-bold mb-2">Timezone</h3>
          <p class="text-white/90 font-medium mb-1 text-sm md:text-base">
            MST (UTC-7)
          </p>
          <p class="text-white/70 text-xs md:text-sm">Mountain Standard Time</p>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-2 order-2 lg:order-1">
          <div class="brutalist-container p-6 md:p-8 bg-white dark:bg-gray-800">
            <h2
              class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4 md:mb-6"
            >
              Start Your Project
            </h2>
            <p
              class="text-gray-600 dark:text-gray-400 mb-6 md:mb-8 text-sm md:text-base"
            >
              Fill out the form below and we'll get back to you within 24 hours
              with a detailed proposal.
            </p>

            <form id="contact-form" class="space-y-4 md:space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
                <div>
                  <label
                    for="name"
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                  >
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                    placeholder="John Doe"
                  />
                </div>
                <div>
                  <label
                    for="email"
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                  >
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div>
                <label
                  for="company"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                >
                  Company Name
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="Your Company"
                />
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6">
                <div>
                  <CustomDropdown
                    name="service"
                    label="Service Needed"
                    options={[
                      "Web Development",
                      "Mobile App Development",
                      "Desktop Applications",
                      "WhatsApp Business Solutions",
                      "AI & Machine Learning",
                      "E-commerce Development",
                      "Custom IT Solutions",
                      "Digital Marketing & SEO",
                    ]}
                    placeholder="Select a service"
                    required={true}
                  />
                </div>

                <div>
                  <CustomDropdown
                    name="budget"
                    label="Budget Range"
                    options={[
                      "Under $5,000",
                      "$5,000 - $15,000",
                      "$15,000 - $50,000",
                      "$50,000 - $100,000",
                      "Over $100,000",
                    ]}
                    placeholder="Select budget"
                  />
                </div>

                <div class="sm:col-span-2 lg:col-span-1">
                  <CustomDropdown
                    name="timeline"
                    label="Timeline"
                    options={[
                      "ASAP (Rush)",
                      "1-2 weeks",
                      "1-3 months",
                      "3-6 months",
                      "6+ months",
                    ]}
                    placeholder="Select timeline"
                  />
                </div>
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                >
                  Project Details *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
                  placeholder="Tell us about your project, goals, requirements, and any specific features you need..."
                ></textarea>
              </div>

              <!-- Success Message -->
              <div
                id="success-message"
                class="success-message hidden bg-green-50 dark:bg-green-900/20 border-2 border-green-200 dark:border-green-800 rounded-lg p-4 flex items-start space-x-3"
              >
                <svg
                  class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h4 class="text-green-800 dark:text-green-400 font-semibold">
                    Message Sent Successfully!
                  </h4>
                  <p class="text-green-700 dark:text-green-300 text-sm mt-1">
                    Thank you for your inquiry. We'll get back to you within 24
                    hours with a detailed proposal.
                  </p>
                </div>
              </div>

              <!-- Error Message -->
              <div
                id="error-message"
                class="hidden bg-red-50 dark:bg-red-900/20 border-2 border-red-200 dark:border-red-800 rounded-lg p-4 flex items-start space-x-3"
              >
                <svg
                  class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.232 15.5c-.77.833.192 2.5 1.732 2.5z"
                  ></path>
                </svg>
                <div>
                  <h4 class="text-red-800 dark:text-red-400 font-semibold">
                    Error Sending Message
                  </h4>
                  <p
                    id="error-text"
                    class="text-red-700 dark:text-red-300 text-sm mt-1"
                  >
                  </p>
                </div>
              </div>

              <button
                type="submit"
                id="submit-btn"
                class="brutalist-button w-full flex items-center justify-center space-x-2 hover:transform hover:scale-105"
              >
                <svg
                  id="send-icon"
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                <svg
                  id="loading-icon"
                  class="w-5 h-5 animate-spin hidden"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
                <span id="submit-text">SEND MESSAGE</span>
              </button>
            </form>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="order-1 lg:order-2 space-y-6 md:space-y-8">
          <!-- Business Hours -->
          <div class="brutalist-container p-4 md:p-6 bg-white dark:bg-gray-800">
            <div class="flex items-center mb-3 md:mb-4">
              <svg
                class="w-5 h-5 md:w-6 md:h-6 text-blue-500 mr-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3
                class="text-lg md:text-xl font-bold text-gray-900 dark:text-white"
              >
                Business Hours
              </h3>
            </div>
            <div class="space-y-2 md:space-y-3">
              <div
                class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
              >
                <span
                  class="text-gray-600 dark:text-gray-400 font-medium text-sm md:text-base"
                  >Monday - Friday</span
                >
                <span class="text-gray-900 dark:text-white text-sm"
                  >9:00 AM - 6:00 PM MST</span
                >
              </div>
              <div
                class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
              >
                <span
                  class="text-gray-600 dark:text-gray-400 font-medium text-sm md:text-base"
                  >Saturday</span
                >
                <span class="text-gray-900 dark:text-white text-sm"
                  >10:00 AM - 4:00 PM MST</span
                >
              </div>
              <div
                class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
              >
                <span
                  class="text-gray-600 dark:text-gray-400 font-medium text-sm md:text-base"
                  >Sunday</span
                >
                <span class="text-gray-900 dark:text-white text-sm">Closed</span
                >
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="space-y-3 md:space-y-4">
            <a
              href="https://calendly.com/webbound/30min"
              target="_blank"
              class="brutalist-button w-full flex items-center justify-center space-x-2 bg-purple-500 text-sm md:text-base py-3 md:py-4"
            >
              <svg
                class="w-4 h-4 md:w-5 md:h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              <span>SCHEDULE CALL</span>
            </a>
          </div>

          <!-- Emergency Contact -->
          <div
            class="brutalist-container p-4 md:p-6 bg-gradient-to-br from-red-500 to-orange-500 text-white"
          >
            <h3 class="text-base md:text-lg font-bold mb-2">
              Emergency Support
            </h3>
            <p class="text-white/90 text-sm mb-3">
              Need urgent assistance with an existing project?
            </p>
            <p class="text-white font-medium text-sm md:text-base">
              emergency@webbound.dev
            </p>
            <p class="text-white/80 text-xs">
              Available 24/7 for critical issues
            </p>
          </div>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="mt-16 md:mt-20">
        <div class="text-center mb-8 md:mb-12">
          <h2
            class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4"
          >
            FREQUENTLY ASKED <span class="gradient-text">QUESTIONS</span>
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
          <div class="brutalist-container p-4 md:p-6 bg-white dark:bg-gray-800">
            <h3
              class="text-base md:text-lg font-bold text-gray-900 dark:text-white mb-3"
            >
              How long does a typical project take?
            </h3>
            <p
              class="text-gray-600 dark:text-gray-400 leading-relaxed text-sm md:text-base"
            >
              Project timelines vary based on complexity. Simple websites take
              2-4 weeks, while complex applications can take 3-6 months. We
              provide detailed timelines during consultation.
            </p>
          </div>

          <div class="brutalist-container p-4 md:p-6 bg-white dark:bg-gray-800">
            <h3
              class="text-base md:text-lg font-bold text-gray-900 dark:text-white mb-3"
            >
              Do you provide ongoing support?
            </h3>
            <p
              class="text-gray-600 dark:text-gray-400 leading-relaxed text-sm md:text-base"
            >
              Yes! We offer comprehensive maintenance packages including
              updates, security monitoring, backups, and technical support to
              keep your solution running smoothly.
            </p>
          </div>

          <div class="brutalist-container p-4 md:p-6 bg-white dark:bg-gray-800">
            <h3
              class="text-base md:text-lg font-bold text-gray-900 dark:text-white mb-3"
            >
              What is your development process?
            </h3>
            <p
              class="text-gray-600 dark:text-gray-400 leading-relaxed text-sm md:text-base"
            >
              We follow an agile methodology: consultation, planning,
              development, testing, and deployment. You'll receive regular
              updates and can provide feedback throughout.
            </p>
          </div>

          <div class="brutalist-container p-4 md:p-6 bg-white dark:bg-gray-800">
            <h3
              class="text-base md:text-lg font-bold text-gray-900 dark:text-white mb-3"
            >
              Can you work with existing systems?
            </h3>
            <p
              class="text-gray-600 dark:text-gray-400 leading-relaxed text-sm md:text-base"
            >
              Absolutely! We specialize in integrating with existing systems,
              APIs, and databases. We can enhance or modernize your current
              technology stack.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Form handling functionality
  const form = document.getElementById("contact-form");
  const submitBtn = document.getElementById("submit-btn");
  const submitText = document.getElementById("submit-text");
  const sendIcon = document.getElementById("send-icon");
  const loadingIcon = document.getElementById("loading-icon");
  const successMessage = document.getElementById("success-message");
  const errorMessage = document.getElementById("error-message");
  const errorText = document.getElementById("error-text");

  let formState = {
    isSubmitting: false,
    submitted: false,
    error: null,
  };

  const formData = {
    name: "",
    email: "",
    company: "",
    service: "",
    budget: "",
    timeline: "",
    message: "",
  };

  // Form submission handler
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Get form data
    const formDataObj = new FormData(form);
    const data = {
      name: formDataObj.get("name")?.toString().trim() || "",
      email: formDataObj.get("email")?.toString().trim() || "",
      company: formDataObj.get("company")?.toString() || "",
      service: formDataObj.get("service")?.toString() || "",
      budget: formDataObj.get("budget")?.toString() || "",
      timeline: formDataObj.get("timeline")?.toString() || "",
      message: formDataObj.get("message")?.toString().trim() || "",
    };

    // Basic validation
    if (!data.name || !data.email || !data.service || !data.message) {
      showError("Please fill in all required fields.");
      return;
    }

    if (data.message.length < 10) {
      showError("Message must be at least 10 characters long.");
      return;
    }

    // Set loading state
    setSubmittingState(true);
    hideMessages();

    try {
      const backendUrl = import.meta.env.VITE_BACKEND_URL || "";
      const response = await fetch(`${backendUrl}/submit`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        setSubmittingState(false);
        showSuccess();
        form.reset();

        // Scroll to success message
        setTimeout(() => {
          successMessage?.scrollIntoView({
            behavior: "smooth",
            block: "center",
          });
        }, 100);
      } else {
        setSubmittingState(false);
        showError(result.error || "Failed to submit form. Please try again.");
      }
    } catch (error) {
      console.error("Form submission error:", error);
      setSubmittingState(false);
      showError("Network error. Please check your connection and try again.");
    }
  });

  function setSubmittingState(isSubmitting) {
    formState.isSubmitting = isSubmitting;

    if (isSubmitting) {
      submitBtn?.setAttribute("disabled", "true");
      submitBtn?.classList.add("opacity-70", "cursor-not-allowed");
      submitBtn?.classList.remove("hover:transform", "hover:scale-105");
      sendIcon?.classList.add("hidden");
      loadingIcon?.classList.remove("hidden");
      if (submitText) submitText.textContent = "SENDING...";

      // Disable form inputs
      const inputs = form?.querySelectorAll("input, textarea, select, button");
      inputs?.forEach((input) => input.setAttribute("disabled", "true"));
    } else {
      submitBtn?.removeAttribute("disabled");
      submitBtn?.classList.remove("opacity-70", "cursor-not-allowed");
      submitBtn?.classList.add("hover:transform", "hover:scale-105");
      sendIcon?.classList.remove("hidden");
      loadingIcon?.classList.add("hidden");
      if (submitText) submitText.textContent = "SEND MESSAGE";

      // Enable form inputs
      const inputs = form?.querySelectorAll("input, textarea, select, button");
      inputs?.forEach((input) => input.removeAttribute("disabled"));
    }
  }

  function showSuccess() {
    formState.submitted = true;
    formState.error = null;
    successMessage?.classList.remove("hidden");
    errorMessage?.classList.add("hidden");
  }

  function showError(message) {
    formState.error = message;
    formState.submitted = false;
    if (errorText) errorText.textContent = message;
    errorMessage?.classList.remove("hidden");
    successMessage?.classList.add("hidden");

    // Scroll to error message
    setTimeout(() => {
      errorMessage?.scrollIntoView({
        behavior: "smooth",
        block: "center",
      });
    }, 100);
  }

  function hideMessages() {
    successMessage?.classList.add("hidden");
    errorMessage?.classList.add("hidden");
  }

  // Handle dropdown changes (if CustomDropdown component emits custom events)
  document.addEventListener("dropdown-change", (e) => {
    const { name, value } = e.detail;
    formData[name] = value;
  });
</script>
