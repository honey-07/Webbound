---
// src/pages/about.astro
import Layout from "../layouts/Layout.astro";

import SEO from "../components/SEO.astro";

import {
  Users,
  Award,
  Clock,
  Shield,
  Target,
  Lightbulb,
  Heart,
  Zap,
} from "lucide-react";

const stats = [
  { icon: Users, value: "50+", label: "Happy Clients" },
  { icon: Award, value: "100+", label: "Projects Completed" },
  { icon: Shield, value: "99.9%", label: "Uptime Guarantee" },
];

const values = [
  {
    title: "Client-Centric Approach",
    description:
      "We prioritize your needs and vision, ensuring every solution is tailored to your specific requirements and business goals.",
    icon: Users,
    color: "from-blue-500 to-purple-600",
  },
  {
    title: "Innovation First",
    description:
      "We stay ahead of technology trends and implement cutting-edge solutions that give you a competitive advantage.",
    icon: Lightbulb,
    color: "from-yellow-500 to-orange-500",
  },
  {
    title: "Quality Assurance",
    description:
      "Our rigorous testing processes guarantee that every solution meets the highest standards of performance and security.",
    icon: Award,
    color: "from-green-500 to-teal-500",
  },
  {
    title: "Timely Delivery",
    description:
      "We understand the importance of deadlines and consistently deliver projects on time with ongoing support.",
    icon: Clock,
    color: "from-purple-500 to-pink-500",
  },
  {
    title: "Transparent Communication",
    description:
      "We maintain open, honest communication throughout every project, keeping you informed at every step.",
    icon: Heart,
    color: "from-red-500 to-pink-500",
  },
  {
    title: "Scalable Solutions",
    description:
      "We build solutions that grow with your business, ensuring long-term value and adaptability.",
    icon: Zap,
    color: "from-indigo-500 to-blue-500",
  },
];

const team = [
  {
    name: "Alex Johnson",
    role: "Founder & CEO",
    image:
      "https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg?auto=compress&cs=tinysrgb&w=400",
    bio: "Visionary leader with 10+ years in technology innovation and business strategy.",
  },
  {
    name: "Sarah Chen",
    role: "CTO & Lead Developer",
    image:
      "https://images.pexels.com/photos/3756679/pexels-photo-3756679.jpeg?auto=compress&cs=tinysrgb&w=400",
    bio: "Full-stack expert specializing in modern web technologies and AI integration.",
  },
  {
    name: "Marcus Rodriguez",
    role: "Head of Design",
    image:
      "https://images.pexels.com/photos/3785077/pexels-photo-3785077.jpeg?auto=compress&cs=tinysrgb&w=400",
    bio: "Creative director with expertise in UX/UI design and brand development.",
  },
  {
    name: "Emily Watson",
    role: "Project Manager",
    image:
      "https://images.pexels.com/photos/3756681/pexels-photo-3756681.jpeg?auto=compress&cs=tinysrgb&w=400",
    bio: "Agile methodology expert ensuring smooth project delivery and client satisfaction.",
  },
];

const processSteps = [
  {
    step: "Consultation",
    desc: "Understanding your vision and requirements",
  },
  {
    step: "Planning",
    desc: "Creating detailed roadmaps and strategies",
  },
  {
    step: "Development",
    desc: "Building with cutting-edge technologies",
  },
  {
    step: "Testing",
    desc: "Rigorous quality assurance and optimization",
  },
  {
    step: "Deployment",
    desc: "Launch and ongoing support",
  },
];
---

<SEO
  title="About Us - Webbound.dev"
  description="Learn about Webbound.dev's journey, our mission to deliver innovative technology solutions, and meet our expert team dedicated to your success."
  keywords={[
    "about us",
    "tech company",
    "IT services",
    "web development team",
    "technology experts",
  ]}
  canonicalUrl="/about"
/>

<Layout>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pt-20">
    <div class="container mx-auto px-4 py-12">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1
          class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6"
        >
          ABOUT <span class="gradient-text">WEBBOUND.DEV</span>
        </h1>
        <p
          class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-4xl mx-auto leading-relaxed"
        >
          We are a comprehensive technology solutions provider helping
          businesses thrive in the digital landscape through innovation,
          expertise, and unwavering commitment to excellence.
        </p>
      </div>

      <!-- Mission & Vision -->
      <div class="grid lg:grid-cols-2 gap-12 mb-20">
        <div class="brutalist-container p-8 bg-white dark:bg-gray-800">
          <div class="flex items-center mb-6">
            <Target className="w-8 h-8 text-blue-500 mr-3" />
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
              Our Mission
            </h2>
          </div>
          <p
            class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed mb-6"
          >
            To transform ideas into digital reality by delivering innovative,
            high-quality technology solutions that drive business growth and
            enhance user experiences across all industries.
          </p>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
            We believe that technology should be accessible, powerful, and
            transformative. Our mission is to bridge the gap between complex
            technical possibilities and practical business solutions.
          </p>
        </div>

        <div class="brutalist-container p-8 bg-white dark:bg-gray-800">
          <div class="flex items-center mb-6">
            <Lightbulb className="w-8 h-8 text-purple-500 mr-3" />
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
              Our Vision
            </h2>
          </div>
          <p
            class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed mb-6"
          >
            To become the leading technology partner for businesses worldwide,
            known for our innovation, reliability, and ability to turn ambitious
            visions into successful digital realities.
          </p>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
            We envision a future where every business, regardless of size, has
            access to cutting-edge technology solutions that propel them toward
            unprecedented success.
          </p>
        </div>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
        {
          stats.map((stat, _index) => {
            const IconComponent = stat.icon;
            return (
              <div class="card-3d p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg text-center">
                <div class="w-12 h-12 bg-blue-500 text-white rounded-full flex items-center justify-center mx-auto mb-4">
                  <IconComponent className="w-6 h-6" />
                </div>
                <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                  {stat.value}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 uppercase tracking-wider">
                  {stat.label}
                </div>
              </div>
            );
          })
        }
      </div>

      <!-- Values -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
          >
            OUR <span class="gradient-text">VALUES</span>
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            The principles that guide everything we do and shape our approach to
            technology solutions
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            values.map((value, _index) => {
              const IconComponent = value.icon;
              return (
                <div class="card-3d p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
                  <div
                    class={`w-12 h-12 bg-gradient-to-r ${value.color} text-white rounded-lg flex items-center justify-center mb-4`}
                  >
                    <IconComponent className="w-6 h-6" />
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                    {value.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                    {value.description}
                  </p>
                </div>
              );
            })
          }
        </div>
      </div>

      <!-- Team -->
      <!-- <div class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            MEET OUR <span class="gradient-text">TEAM</span>
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            The talented individuals behind Webbound.dev's success
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {team.map((member, index) => (
            <div class="card-3d bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-64 object-cover"
              />
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{member.name}</h3>
                <p class="text-blue-500 font-medium mb-3">{member.role}</p>
                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">{member.bio}</p>
              </div>
            </div>
          ))}
        </div>
      </div> -->

      <!-- Process -->
      <div class="brutalist-container p-8 bg-white dark:bg-gray-800 mb-20">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Our Process
          </h2>
          <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            We follow a proven methodology to ensure successful project delivery
            and exceptional results
          </p>
        </div>
        <div class="grid md:grid-cols-5 gap-6">
          {
            processSteps.map((item, index) => (
              <div class="text-center">
                <div class="w-12 h-12 bg-blue-500 text-white rounded-full flex items-center justify-center mx-auto mb-3 font-bold">
                  {index + 1}
                </div>
                <h4 class="font-semibold text-gray-900 dark:text-white mb-2">
                  {item.step}
                </h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {item.desc}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <div
          class="brutalist-container inline-block p-8 bg-white dark:bg-gray-800"
        >
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            READY TO WORK WITH US?
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto">
            Let's discuss how we can transform your ideas into digital reality
            and drive your business forward.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="brutalist-button"> START YOUR PROJECT </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
