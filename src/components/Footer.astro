---
import Logo from "../assets/logo.webp";
import { icons } from "lucide";

const currentYear = new Date().getFullYear();

const Mail = icons.mail;
const Phone = icons.phone;
const MapPin = icons.map_pin;
const Twitter = icons.twitter;
const Linkedin = icons.linkedin;
const Instagram = icons.instagram;

const footerLinks = {
  services: [
    { name: "Web Development", href: "/services/web-development" },
    { name: "Mobile Apps", href: "/services/mobile-development" },
    { name: "Desktop Apps", href: "/services/desktop-development" },
    { name: "AI & ML Solutions", href: "/services/ai-ml-solutions" },
    { name: "E-commerce", href: "/services/ecommerce-development" },
    { name: "IT Solutions", href: "/services/custom-it-solutions" },
    { name: "Digital Marketing", href: "/services/digital-marketing" },
  ],
  company: [
    { name: "About Us", href: "/about" },
    { name: "Careers", href: "/careers" },
    { name: "Contact", href: "/contact" },
  ],
  legal: [
    { name: "Privacy Policy", href: "/privacy" },
    { name: "Terms of Service", href: "/terms" },
  ],
};

const socialLinks = [
  { icon: Twitter, href: "https://twitter.com/webbound_dev", label: "Twitter" },
  {
    icon: Linkedin,
    href: "https://linkedin.com/company/webbound",
    label: "LinkedIn",
  },
  {
    icon: Instagram,
    href: "https://www.instagram.com/webbound.dev",
    label: "Instagram",
  },
];
---

<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-8 lg:py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center space-x-3 mb-6">
          <div
            class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center"
          >
            <img src={Logo.src} alt="Webbound Logo" class="rounded-lg" />
          </div>
          <div>
            <h3 class="text-xl lg:text-2xl font-bold">
              WEBBOUND<span class="text-blue-400">.DEV</span>
            </h3>
            <p class="text-xs text-gray-400 font-mono">
              TRANSFORMING IDEAS INTO DIGITAL REALITY
            </p>
          </div>
        </a>

        <p
          class="text-gray-400 mb-6 max-w-md leading-relaxed text-sm lg:text-base"
        >
          We're a cutting-edge technology solutions company specializing in web
          development, mobile apps, AI integration, and custom IT solutions.
          Let's build the future together.
        </p>

        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <svg class="w-4 h-4 lg:w-5 lg:h-5 text-blue-400" innerHTML={Mail}
            ></svg>
            <span class="text-gray-400 text-sm lg:text-base"
              >hello@webbound.dev</span
            >
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-400" innerHTML={Phone}
            ></svg>
            <span class="text-gray-400 text-sm lg:text-base"
              >+1 (208) 408 1463</span
            >
          </div>
          <div class="flex items-start space-x-3">
            <svg
              class="w-4 h-4 lg:w-5 lg:h-5 text-purple-400 mt-0.5"
              innerHTML={MapPin}></svg>
            <span class="text-gray-400 text-sm lg:text-base">
              9169 W State St #2156<br />Garden City, ID 83714
            </span>
          </div>
        </div>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4 text-white">Services</h4>
        <ul class="space-y-1 md:space-y-2">
          {
            footerLinks.services.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 flex items-center hover:text-white transition-colors text-sm lg:text-base block py-0.5 md:py-1"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4 text-white">Company</h4>
        <ul class="space-y-1 md:space-y-2">
          {
            footerLinks.company.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 flex items-center hover:text-white transition-colors text-sm lg:text-base block py-0.5 md:py-1"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4 text-white">Legal</h4>
        <ul class="space-y-1 md:space-y-2">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 flex items-center hover:text-white transition-colors text-sm lg:text-base block py-0.5 md:py-1"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 lg:mt-12 pt-6 lg:pt-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <div class="text-gray-400 text-sm text-center md:text-left">
          Â© {currentYear} Webbound.dev. All rights reserved.
        </div>
        <div class="flex space-x-4 lg:space-x-6">
          {
            socialLinks.map(({ icon, href, label }) => (
              <a
                href={href}
                aria-label={label}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors p-2 hover:bg-gray-800 rounded-lg"
              >
                <svg class="w-4 h-4 lg:w-5 lg:h-5" innerHTML={icon} />
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
